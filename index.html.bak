    <script src="script.js"></script>

    <!-- Minimal inline chat demo behavior -->
    <script>
        (function () {
            // modal and chat UI
            const modalOverlay = document.getElementById('modal-overlay');
            const openBtn = document.getElementById('open-chat-demo');
            const closeBtn = document.getElementById('close-chat-demo');
            const chatForm = document.getElementById('chat-form');
            const chatInput = document.getElementById('chat-input');
            const chatMessages = document.getElementById('chat-messages');

            function showModal() {
                modalOverlay.style.display = 'flex';
                modalOverlay.setAttribute('aria-hidden', 'false');
                chatInput.focus();
                addBotMessage("Hello! I'm Lewis_AI — your course assistant. Ask me about Android, Web, Full-stack courses, greetings or how to enroll.");
            }

            function hideModal() {
                modalOverlay.style.display = 'none';
                modalOverlay.setAttribute('aria-hidden', 'true');
                chatMessages.innerHTML = '';
            }

            function scrollMessagesToBottom() {
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }

            function addUserMessage(text) {
                const p = document.createElement('div');
                p.className = 'message user';
                p.textContent = text;
                chatMessages.appendChild(p);
                scrollMessagesToBottom();
            }

            function addBotMessage(text) {
                const p = document.createElement('div');
                p.className = 'message bot';
                p.textContent = text;
                chatMessages.appendChild(p);
                scrollMessagesToBottom();
            }

            function getBotReply(message) {
                const msg = message.toLowerCase();

                // Matches greetings
                if (/^(hi|hello|hey|yo|good morning|good afternoon|good evening)(\b|!|.)/.test(msg) ||
                    msg.includes('hello') || msg.includes('hi') || msg.includes('hey')) {
                    return "Hi there! I’m Lewis_AI. Which course are you interested in? (Android, Web, or Full‑stack) — or ask how to enroll.";
                }

                // Course-specific answers
                if (msg.includes('android')) {
                    return "Android course: Learn Kotlin/Java, Android SDK, Jetpack Compose, and app deployment to Play Store. Typical duration: 8-12 weeks.";
                }

                if (msg.includes('web') && !msg.includes('full')) {
                    return "Web course: Learn HTML, CSS, JavaScript, React or modern front-end libraries, responsive design and deployment. Typical duration: 6-10 weeks.";
                }

                if (msg.includes('full') || msg.includes('full-stack') || (msg.includes('stack') && msg.includes('full'))) {
                    return "Full‑stack: Covers both front-end (React) and back-end (Node/Express or similar), databases, REST APIs, and deployment. Typical duration: 12-16 weeks.";
                }

                // Enrollment questions
                if (msg.includes('enroll') || msg.includes('join') || msg.includes('register') || msg.includes('how to join')) {
                    return "To enroll: 1) Visit the course repository or website; 2) Follow the enrollment steps (sign-up form, payment if required); 3) Check email confirmation. Ask me which course you'd like to join!";
                }

                // Small talk / default fallback
                if (msg.includes('thanks') || msg.includes('thank')) {
                    return "You're welcome! Let me know if you want more course details.";
                }

                if (msg.includes('help') || msg.includes('what can you do') || msg.includes('what can you')) {
                    return "I can give course descriptions (Android, Web, Full‑stack), answer greetings and show how to enroll. Try asking about a specific course.";
                }

                return "I’m sorry, I didn't get that. Try asking about 'Android', 'Web', 'Full-stack', or 'How to enroll'.";
            }

            // Event listeners
            openBtn && openBtn.addEventListener('click', function () {
                showModal();
            });

            closeBtn && closeBtn.addEventListener('click', function () {
                hideModal();
            });

            chatForm && chatForm.addEventListener('submit', function (e) {
                e.preventDefault();
                const val = (chatInput.value || '').trim();
                if (!val) return;
                addUserMessage(val);
                chatInput.value = '';
                chatInput.disabled = true;

                // simulate thinking
                setTimeout(() => {
                    const reply = getBotReply(val);
                    addBotMessage(reply);
                    chatInput.disabled = false;
                    chatInput.focus();
                }, 450);
            });

            // close modal overlay by outside click
            modalOverlay && modalOverlay.addEventListener('click', function (ev) {
                if (ev.target === modalOverlay) {
                    hideModal();
                }
            });

            // basic keyboard shortcut: Esc to close
            window.addEventListener('keydown', function (ev) {
                if (ev.key === 'Escape') {
                    hideModal();
                }
            });

            // Ensure a visible default trigger exists (in case JS loaded after DOM)
            if (!openBtn) {
                // If the TRY DEMO button is missing for some reason, create a tiny floating open button
                const fallbackBtn = document.createElement('button');
                fallbackBtn.textContent = 'Chat Demo';
                fallbackBtn.style.position = 'fixed';
                fallbackBtn.style.right = '16px';
                fallbackBtn.style.bottom = '16px';
                fallbackBtn.style.padding = '10px 12px';
                fallbackBtn.style.borderRadius = '8px';
                fallbackBtn.style.border = 'none';
                fallbackBtn.style.background = '#1a73e8';
                fallbackBtn.style.color = '#fff';
                fallbackBtn.style.zIndex = '999';
                fallbackBtn.addEventListener('click', showModal);
                document.body.appendChild(fallbackBtn);
            }
        })();
    </script>
